{
    "compilerOptions": {
        "strict": true,
        "module": "ESNext",
        // Would need to be ES2015 for tsc to target GJS, but we're separately using esbuild to generate the JS
        "target": "ESNext",
        "outDir": "build",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "isolatedModules": true,
    },
    "include": [
        "src/*"
    ]
}